<html t:type="layout" title="firstProject com.example"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="row">
    <div class="span4 offset3">
        <t:form t:id="registration">
            <h2>Please fill the fields</h2>
            <t:textfield t:id="name" class="input-block-level" validate="required" placeholder="Name"/><br/>
            <t:textfield t:id="surname" class="input-block-level" validate="required" placeholder="Surname"/><br/>
            <t:textfield t:id="email" class="input-block-level" validate="required" placeholder="Email address"/><br/>
            <t:passwordfield t:id="password" class="input-block-level" validate="required" placeholder="Password"/><br/>
            <t:submit class="btn btn-large btn-primary" value="Register"/>
        </t:form>
    </div>
</div>

</html>
